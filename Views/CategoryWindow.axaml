<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Ofertomator.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
        x:Class="Ofertomator.Views.CategoryWindow"
        x:DataType="vm:CategoryEditorViewModel"
        Title="{Binding WindowTitle}"
        Width="500" Height="350"
        MinWidth="450" MinHeight="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

    <Design.DataContext>
        <vm:CategoryEditorViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto" Margin="20">
        
        <!-- Formularz -->
        <StackPanel Grid.Row="0" Spacing="20">
            
            <!-- Nazwa Kategorii -->
            <StackPanel>
                <TextBlock Text="Nazwa Kategorii *" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,8"
                          Foreground="White"/>
                <TextBox Text="{Binding Name}" 
                        Watermark="np. Elektronika"
                        FontSize="14"/>
            </StackPanel>

            <!-- Domyślna Marża -->
            <StackPanel>
                <TextBlock Text="Domyślna Marża %" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,8"
                          Foreground="White"/>
                <NumericUpDown Value="{Binding DefaultMargin}"
                              Minimum="0"
                              Maximum="1000"
                              Increment="5"
                              FormatString="F0"
                              FontSize="14"/>
                <TextBlock Text="Marża zostanie automatycznie zastosowana przy dodawaniu produktów z tej kategorii do oferty" 
                          FontSize="11" 
                          Foreground="#808080"
                          TextWrapping="Wrap"
                          Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Info -->
            <Border Background="#2D2D30" 
                   Padding="12" 
                   CornerRadius="5"
                   Margin="0,10,0,0">
                <TextBlock Text="ℹ️ Kategorie pozwalają na grupowanie produktów w ofercie PDF"
                          TextWrapping="Wrap"
                          Foreground="#B0B0B0"
                          FontSize="12"/>
            </Border>

        </StackPanel>

        <!-- Przyciski -->
        <Border Grid.Row="1" 
                Background="#2D2D30" 
                Padding="15" 
                Margin="-20,20,-20,-20"
                CornerRadius="0,0,8,8">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Spacing="10">
                <Button Content="Anuluj" 
                       Command="{Binding CancelCommand}"
                       Width="100"
                       Padding="10,8"
                       Background="#3E3E42"
                       Foreground="White"/>
                <Button Content="Zapisz" 
                       Command="{Binding SaveCommand}"
                       Width="100"
                       Padding="10,8"
                       Background="#007ACC"
                       Foreground="White"
                       FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>

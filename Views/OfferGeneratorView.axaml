<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Ofertomator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="Ofertomator.Views.OfferGeneratorView"
             x:DataType="vm:OfferGeneratorViewModel">

    <Design.DataContext>
        <vm:OfferGeneratorViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <!-- Dark Theme Styling -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style Selector="ListBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#007ACC"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#1177BB"/>
        </Style>

        <Style Selector="Button.add">
            <Setter Property="Background" Value="#0E8C3A"/>
        </Style>

        <Style Selector="Button.add:pointerover">
            <Setter Property="Background" Value="#10A647"/>
        </Style>

        <Style Selector="Button.remove">
            <Setter Property="Background" Value="#C42B1C"/>
        </Style>

        <Style Selector="Button.remove:pointerover">
            <Setter Property="Background" Value="#E74856"/>
        </Style>

        <Style Selector="NumericUpDown">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
        </Style>

        <Style Selector="Border.column">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Generator Ofert" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#007ACC"/>
            <TextBlock Text="{Binding StatusMessage}" 
                      FontSize="12" 
                      Foreground="#B0B0B0" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 3-Column Layout: Kategorie 15%, Produkty 30%, Oferta 55% -->
        <Grid Grid.Row="1" ColumnDefinitions="3*,6*,11*" Margin="10,0,10,10">

            <!-- LEWA KOLUMNA: Kategorie (15%) -->
            <Border Grid.Column="0" Classes="column">
                <Grid RowDefinitions="Auto,Auto,*">
                    <TextBlock Grid.Row="0" Text="ðŸ“ Kategorie" Classes="header"/>

                    <Button Grid.Row="1" 
                           Content="ðŸ”„ OdÅ›wieÅ¼" 
                           Command="{Binding RefreshCommand}"
                           HorizontalAlignment="Stretch"
                           Margin="0,0,0,10"/>

                    <ListBox Grid.Row="2"
                            ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                              FontWeight="SemiBold" 
                                              FontSize="14"/>
                                    <TextBlock Text="{Binding DefaultMargin, StringFormat='MarÅ¼a: {0}%'}" 
                                              FontSize="11" 
                                              Foreground="#B0B0B0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- ÅšRODKOWA KOLUMNA: Produkty (30%) -->
            <Border Grid.Column="1" Classes="column">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
                    <TextBlock Grid.Row="0" Text="ðŸ“¦ Produkty" Classes="header"/>

                    <!-- Search Bar -->
                    <TextBox Grid.Row="1" 
                            Text="{Binding SearchQuery}"
                            Watermark="ðŸ” Szukaj produktu..."
                            Margin="0,0,0,10"/>

                    <!-- Info Bar with Add All Button -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBlock Grid.Column="0"
                                  Text="{Binding SourceProducts.Count, StringFormat='ProduktÃ³w: {0}'}" 
                                  FontSize="12" 
                                  Foreground="#B0B0B0"
                                  VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                               Content="âž• Dodaj wszystkie"
                               Command="{Binding AddAllProductsFromCategoryCommand}"
                               Classes="add"
                               FontSize="10"
                               Padding="8,4"
                               ToolTip.Tip="Dodaj wszystkie produkty z tej kategorii do oferty"/>
                    </Grid>

                    <!-- Products List -->
                    <ListBox Grid.Row="4"
                            ItemsSource="{Binding SourceProducts}"
                            SelectedItem="{Binding SelectedSourceProduct}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="{Binding PurchasePriceNet, StringFormat='Cena: {0:N2} PLN'}" 
                                                      FontSize="11" 
                                                      Foreground="#B0B0B0"/>
                                            <TextBlock Text="{Binding VatRate, StringFormat='VAT: {0}%'}" 
                                                      FontSize="11" 
                                                      Foreground="#B0B0B0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Add Button -->
                                    <Button Grid.Column="1" 
                                           Content="âž•" 
                                           Classes="add"
                                           Command="{Binding $parent[UserControl].((vm:OfferGeneratorViewModel)DataContext).AddProductToOfferCommand}"
                                           CommandParameter="{Binding}"
                                           ToolTip.Tip="Dodaj do oferty"
                                           Padding="8,4"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- PRAWA KOLUMNA: Oferta/Koszyk (55%) -->
            <Border Grid.Column="2" Classes="column">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
                    <TextBlock Grid.Row="0" Text="ðŸ›’ Oferta" Classes="header"/>

                    <!-- Nazwa oferty -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="Nazwa oferty:" 
                                  FontSize="11" 
                                  Foreground="#B0B0B0"
                                  Margin="0,0,0,3"/>
                        <TextBox Text="{Binding OfferName}"
                                Watermark="Oferta handlowa"
                                FontSize="12"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="2" 
                          RowDefinitions="Auto,Auto"
                          ColumnDefinitions="*,Auto,Auto"
                          Margin="0,0,0,10">
                        <!-- Pierwsza linia -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                  Text="{Binding OfferItemsInfo}" 
                                  VerticalAlignment="Center" 
                                  FontSize="12" 
                                  Foreground="#B0B0B0"/>
                        <Button Grid.Row="0" Grid.Column="1"
                               Content="âœ¨ Nowa oferta" 
                               Command="{Binding NewOfferCommand}"
                               Background="#007ACC"
                               Margin="10,0,0,0"
                               ToolTip.Tip="Rozpocznij tworzenie nowej oferty"/>
                        <Button Grid.Row="0" Grid.Column="2"
                               Content="ðŸ”„ KolejnoÅ›Ä‡ produktÃ³w" 
                               Command="{Binding OpenProductOrderWindowCommand}"
                               Background="#6C757D"
                               Margin="10,0,0,0"
                               ToolTip.Tip="ZmieÅ„ kolejnoÅ›Ä‡ produktÃ³w w ofercie"/>
                        
                        <!-- Druga linia -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                   Orientation="Horizontal"
                                   Spacing="10"
                                   Margin="0,10,0,0">
                            <Button Content="ðŸ’¾ Zapisz OfertÄ™" 
                                   Command="{Binding SaveOfferCommand}"
                                   Background="#28A745"
                                   IsEnabled="{Binding !IsBusy}"
                                   ToolTip.Tip="Zapisz ofertÄ™ do bazy danych"/>
                            <Button Content="ðŸ“„ Generuj PDF" 
                                   Command="{Binding GeneratePdfCommand}"
                                   Background="#C8102E"
                                   IsEnabled="{Binding !IsBusy}"
                                   ToolTip.Tip="Wygeneruj ofertÄ™ w formacie PDF"/>
                        </StackPanel>
                    </Grid>

                    <!-- Batch Margin Edit Section -->
                    <Border Grid.Row="3"
                           Background="#1E1E1E"
                           Padding="8"
                           Margin="0,0,0,10"
                           CornerRadius="3">
                        <StackPanel Orientation="Horizontal"
                                   Spacing="8">
                            <TextBlock Text="Nowa marÅ¼a dla zaznaczonych:"
                                      VerticalAlignment="Center"
                                      FontSize="10"/>
                            <TextBox Text="{Binding NewMarginForSelected}"
                                    Width="50"
                                    Height="22"
                                    Padding="4,2"
                                    FontSize="10"
                                    VerticalContentAlignment="Center"
                                    TextAlignment="Center"/>
                            <TextBlock Text="%"
                                      VerticalAlignment="Center"
                                      FontSize="10"/>
                            <Button Content="âœ“ Zastosuj"
                                   Command="{Binding ApplyMarginToSelectedCommand}"
                                   Background="#0E8C3A"
                                   FontSize="10"
                                   Padding="8,4"
                                   ToolTip.Tip="Zastosuj marÅ¼Ä™ do zaznaczonych produktÃ³w"/>
                            <Button Content="ðŸ—‘ï¸ UsuÅ„ zaznaczone"
                                   Command="{Binding RemoveSelectedCommand}"
                                   Background="#C42B1C"
                                   FontSize="10"
                                   Padding="8,4"
                                   ToolTip.Tip="UsuÅ„ zaznaczone produkty z oferty"/>
                        </StackPanel>
                    </Border>

                    <!-- Offer Items List - Grouped by Category with LAZY RENDERING -->
                    <!-- UWAGA: Brak wirtualizacji dla kategorii (maÅ‚o ich), ale jest dla produktÃ³w -->
                    <ScrollViewer Grid.Row="4" AllowAutoHide="False">
                        <ItemsControl ItemsSource="{Binding OfferItemsGroupedByCategory}">
                            <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- LAZY RENDERING: Expander dla kaÅ¼dej kategorii z zapamiÄ™tywaniem stanu -->
                                <Expander Margin="0,0,0,8" IsExpanded="{Binding IsExpanded}">
                                    <Expander.Header>
                                        <!-- Category Header -->
                                        <Border Background="#C8102E" 
                                               Padding="6" 
                                               CornerRadius="3">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <CheckBox Grid.Column="0"
                                                         Margin="0,0,10,0"
                                                         VerticalAlignment="Center"
                                                         ToolTip.Tip="Zaznacz/odznacz wszystkie w tej kategorii"
                                                         Command="{Binding $parent[UserControl].((vm:OfferGeneratorViewModel)DataContext).ToggleCategorySelectionCommand}"
                                                         CommandParameter="{Binding CategoryName}"/>
                                                <TextBlock Grid.Column="1"
                                                          Text="{Binding CategoryName}" 
                                                          FontWeight="Bold" 
                                                          FontSize="12"
                                                          Foreground="White"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </Expander.Header>
                                        
                                    <!-- Products in this category - VIRTUALIZED (lazy rendered) -->
                                    <ListBox ItemsSource="{Binding Items}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="0,3,0,0">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#2D2D30" 
                                                           Padding="4" 
                                                           Margin="0,0,0,2" 
                                                           CornerRadius="5">
                                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                                                            <CheckBox Grid.Column="0"
                                                                     IsChecked="{Binding IsSelected}"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,8,0"
                                                                     ToolTip.Tip="Zaznacz do masowej edycji"/>
                                                            <TextBox Grid.Column="1" 
                                                                     Text="{Binding CustomName}" 
                                                                     Watermark="{Binding Name}"
                                                                     FontWeight="Bold" 
                                                                     FontSize="12"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,10,0"
                                                                     BorderThickness="0"
                                                                     Background="Transparent"
                                                                     Padding="2"
                                                                     ToolTip.Tip="Edytuj nazwÄ™ produktu dla tej oferty (pozostaw puste aby uÅ¼yÄ‡ oryginalnej nazwy)"/>
                                                            <StackPanel Grid.Column="2"
                                                                       Orientation="Horizontal"
                                                                       Spacing="3"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock Text="Zakup:" 
                                                                          FontSize="10" 
                                                                          Foreground="#B0B0B0"
                                                                          VerticalAlignment="Center"
                                                                          Margin="0,0,2,0"/>
                                                                <TextBox Text="{Binding PurchasePriceNetInput}"
                                                                        Width="50"
                                                                        Height="10"
                                                                        Padding="3,1"
                                                                        FontSize="10"
                                                                        VerticalAlignment="Center"
                                                                        VerticalContentAlignment="Center"
                                                                        TextAlignment="Center"
                                                                        ToolTip.Tip="Edytuj cenÄ™ zakupu (zmiana zostanie zapisana w bazie danych po 600ms)"/>
                                                                <TextBlock Text="ðŸ’¾"
                                                                          FontSize="8"
                                                                          VerticalAlignment="Center"
                                                                          Foreground="#10A647"
                                                                          IsVisible="{Binding IsSavingPurchasePrice}"
                                                                          ToolTip.Tip="Zapisywanie do bazy..."/>
                                                            </StackPanel>
                                                            <TextBlock Grid.Column="3" 
                                                                      Text="  |  " 
                                                                      FontSize="12" 
                                                                      Foreground="#555"
                                                                      VerticalAlignment="Center"/>
                                                            <TextBlock Grid.Column="4" 
                                                                      Text="MarÅ¼a:" 
                                                                      FontSize="10" 
                                                                      Foreground="#B0B0B0"
                                                                      Margin="0,0,3,0"
                                                                      VerticalAlignment="Center"/>
                                                            <TextBox Grid.Column="5"
                                                                    Text="{Binding MarginInput}"
                                                                    Width="40"
                                                                    Height="10"
                                                                    Padding="3,1"
                                                                    FontSize="12"
                                                                    VerticalAlignment="Center"
                                                                    VerticalContentAlignment="Center"
                                                                    TextAlignment="Center"/>
                                                            <TextBlock Grid.Column="6" 
                                                                      Text="%  |  " 
                                                                      FontSize="10" 
                                                                      Foreground="#555"
                                                                      VerticalAlignment="Center"
                                                                      Margin="2,0,0,0"/>
                                                            <TextBlock Grid.Column="7" 
                                                                      Text="SprzedaÅ¼:" 
                                                                      FontSize="10" 
                                                                      Foreground="#B0B0B0"
                                                                      Margin="0,0,3,0"
                                                                      VerticalAlignment="Center"/>
                                                            <TextBox Grid.Column="8"
                                                                    Text="{Binding SalePriceNetInput}"
                                                                    Width="60"
                                                                    Height="10"
                                                                    Padding="3,1"
                                                                    FontSize="12"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="#10A647"
                                                                    VerticalAlignment="Center"
                                                                    VerticalContentAlignment="Center"
                                                                    TextAlignment="Center"/>
                                                            <Button Grid.Column="9" 
                                                                   Content="âŒ" 
                                                                   Classes="remove"
                                                                   Command="{Binding $parent[UserControl].((vm:OfferGeneratorViewModel)DataContext).RemoveFromOfferCommand}"
                                                                   CommandParameter="{Binding}"
                                                                   ToolTip.Tip="UsuÅ„ z oferty"
                                                                   Padding="4,2"
                                                                   FontSize="9"
                                                                   VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
               Background="#007ACC" 
               Padding="10,5">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <ProgressBar IsIndeterminate="True" 
                            Width="100" 
                            Height="4" 
                            IsVisible="{Binding IsBusy}"/>
                <TextBlock Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center" 
                          FontSize="12"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>

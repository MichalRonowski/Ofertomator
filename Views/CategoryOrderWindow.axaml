<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Ofertomator.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="Ofertomator.Views.CategoryOrderWindow"
        x:DataType="vm:CategoryOrderViewModel"
        Title="Ustaw kolejnoÅ›Ä‡ kategorii"
        Width="500" Height="600"
        MinWidth="400" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#3E3E40" />
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Cursor" Value="Arrow" />
        </Style>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="#252526" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10" />
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#007ACC" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        
        <!-- NagÅ‚Ã³wek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“‹ KolejnoÅ›Ä‡ kategorii w ofercie" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Wybierz kategoriÄ™ i uÅ¼yj strzaÅ‚ek, aby zmieniÄ‡ jej pozycjÄ™" 
                      FontSize="12" 
                      Foreground="#B0B0B0"
                      TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Lista kategorii z przyciskami -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            
            <!-- Lista kategorii -->
            <ListBox Grid.Column="0" 
                    ItemsSource="{Binding OrderedCategories}"
                    SelectedItem="{Binding SelectedCategory}"
                    Margin="0,0,10,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" 
                                      Text="{Binding Order, StringFormat='{}{0}.'}" 
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#007ACC"
                                      Margin="0,0,10,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                                      Text="{Binding Name}" 
                                      FontSize="14"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Przyciski gÃ³ra/dÃ³Å‚ -->
            <StackPanel Grid.Column="1" 
                       VerticalAlignment="Center" 
                       Spacing="10">
                <Button Content="â–²" 
                       Command="{Binding MoveUpCommand}"
                       Width="50" 
                       Height="50"
                       FontSize="20"
                       ToolTip.Tip="PrzesuÅ„ w gÃ³rÄ™"/>
                <Button Content="â–¼" 
                       Command="{Binding MoveDownCommand}"
                       Width="50" 
                       Height="50"
                       FontSize="20"
                       ToolTip.Tip="PrzesuÅ„ w dÃ³Å‚"/>
            </StackPanel>
        </Grid>

        <!-- Przyciski akcji -->
        <Border Grid.Row="2" 
                Background="#2D2D30" 
                Padding="15" 
                Margin="-20,20,-20,-20"
                CornerRadius="0,0,8,8">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Spacing="10">
                <Button Content="Anuluj" 
                       Command="{Binding CancelCommand}"
                       Width="100"/>
                <Button Content="Zastosuj" 
                       Command="{Binding ApplyCommand}"
                       Width="100"
                       Background="#007ACC"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
